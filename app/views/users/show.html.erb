<div class="container mt-4">
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Cellphone</th>
      <th scope="col">Address</th>
      <th scope="col" colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @user.id %></th>
      <td><%= @user.first_name %></td>
      <td><%= @user.last_name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.cellphone %></td>
      <td><%= @user.address %></td>
      <td><%= link_to 'Edit', edit_user_path(@user), class: 'text-success edit' %></td>
      <td><%= link_to 'Delete', user_path(@user), method: :delete, class: 'text-danger delete' %></td>
    </tr>
  </tbody>
</table>
</div>
<%= link_to 'Back to list user', users_path, class: 'btn btn-secondary ml-3' %>
