<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <%= form_with model: (@user), url: users_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :first_name %><br>
          <%= form.text_field :first_name, class: 'form-control', placeholder: 'First_name' %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %><br>
          <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last_name' %>
        </div>
        <div class="form-group">
          <%= form.label :email %><br>
          <%= form.text_field :email, class: 'form-control', placeholder: 'email@example.com' %>
        </div>
        <div class="form-group">
          <%= form.label :cellphone %><br>
          <%= form.text_field :cellphone, class: 'form-control', placeholder: 'Here cellphone' %>
        </div>
        <div class="form-group">
          <%= form.label :address %><br>
          <%= form.text_field :address, class: 'form-control', placeholder: 'Address' %>
        </div>
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      <%end%>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
