<div class="container">
  <p id="notice"><%= notice %></p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(@category), class: 'text-success edit' %>
        <td><%= link_to 'Delete', category_path(@category), method: :delete, class: 'text-danger delete' %></td>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Back to category list', categories_path %>
</div>
